<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.plugow.norbsoftapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.plugow.norbsoftapp.NorbsoftApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:usesCleartextTraffic="true"
            android:theme="@style/AppTheme">

        <activity android:name="com.plugow.norbsoftapp.ui.activity.MainActivity"
                android:label="@string/current_list"/>
        <activity
                android:name="com.plugow.norbsoftapp.ui.activity.SplashActivity"
                android:noHistory="true"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>